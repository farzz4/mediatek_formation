{% extends "baseadmin.html.twig" %}

{% block page_title %}Gestion des playlists{% endblock %}

{% block admin_content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    
    {% for message in app.flashes('alert') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Liste des playlists</h2>
        <a href="{{ path('admin.playlist.ajout') }}" class="btn btn-success">
            + Ajouter une playlist
        </a>
    </div>
    
    <table class="table table-striped table-hover">
        <caption class="visually-hidden">Tableau des playlists</caption>
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    Playlist<br />
                    <div class="d-flex align-items-center mt-1">
                        <a href="{{ path('admin.playlists.sort', {champ:'name', ordre:'ASC'}) }}" class="btn btn-primary btn-sm me-1">◀</a>
                        <a href="{{ path('admin.playlists.sort', {champ:'name', ordre:'DESC'}) }}" class="btn btn-primary btn-sm me-2">▶</a>
                        <form class="d-flex" method="POST" action="{{ path('admin.playlists.findallcontain', {champ:'name'}) }}">
                            <input type="text" class="form-control form-control-sm me-1" name="recherche" 
                                   value="{% if valeur|default and not table|default %}{{ valeur }}{% endif %}"
                                   placeholder="Rechercher...">
                            <input type="hidden" name="_token" value="{{ csrf_token('filtre_name') }}">
                            <button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
                        </form>
                    </div>
                </th>
                <th class="text-left align-top" scope="col">
                    Catégories
                    <form class="mt-1" method="POST" action="{{ path('admin.playlists.findallcontain', {champ:'id', table:'categories'}) }}">
                        <select class="form-select form-select-sm" name="recherche" id="recherche" onchange="this.form.submit()">
                            <option value="">Toutes catégories</option>
                            {% for categorie in categories %}
                                <option 
                                    {% if valeur|default and valeur==categorie.id %} 
                                        selected
                                    {% endif %} 
                                    value="{{ categorie.id }}">{{ categorie.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </form>
                </th>
                <th class="text-center align-top" scope="col">
                    Formations<br />
                    <div class="mt-1">
                        <a href="{{ path('admin.playlists.sort', {champ:'nombre', ordre:'ASC'}) }}" class="btn btn-primary btn-sm me-1">◀</a>
                        <a href="{{ path('admin.playlists.sort', {champ:'nombre', ordre:'DESC'}) }}" class="btn btn-primary btn-sm">▶</a>
                    </div>
                </th>
                <th class="text-center align-top" scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% if playlists|length > 0 %}
                {% for playlist in playlists %}
                    <tr class="align-middle">
                        <td>
                            <h5 class="text-primary mb-0">
                                {{ playlist.name }}
                            </h5>
                        </td>
                        <td class="text-left">
                            {% if playlist.categoriesplaylist|length > 0 %}
                                {% for categorie in playlist.categoriesplaylist %}
                                    <span class="badge bg-secondary me-1">{{ categorie }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucune catégorie</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <span class="badge bg-info fs-6">
                                {{ playlist.formations|length }} 
                                {{ (playlist.formations|length) > 1 ? 'formations' : 'formation' }}
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin.playlist.edit', {id:playlist.id}) }}" 
                                   class="btn btn-warning btn-sm">
                                    Modifier
                                </a>
                                <a href="{{ path('admin.playlist.suppr', {id:playlist.id}) }}" 
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer \"{{ playlist.name }}\" ?')">
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        Aucune playlist disponible.
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}