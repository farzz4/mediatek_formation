{% extends "base.html.twig" %}

{% block title %}MediaTek86 - Formations numériques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style minimal pour le bouton Admin */
        .admin-btn {
            margin-left: 10px;
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 14px;
        }
        .admin-btn:hover {
            background-color: #c82333;
            color: white;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block top %}
    <div class="container">
        <!-- bannière à gauche -->
        <div class="row">
            <div class="col-12 text-left">
                <img src="{{ asset('banniere.jpg') }}" alt="MediaTek86 - Des formations pour tous sur des outils numériques" class="img-fluid" style="max-height: 120px;">
            </div>
        </div>
        
        <!-- menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Menu principal à gauche -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('formations') }}">Formations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('playlists') }}">Playlists</a>
                    </li>
                </ul>
                
                <!-- Éléments à droite -->
                <div class="navbar-nav ml-auto align-items-center">
                    <!-- Bouton Admin simple -->
                    
          <a href="{{ path('admin.formations') }}" class="admin-btn">
    Administration
</a>
                    
                    <!-- Menu utilisateur simple -->
                    {% if app.user %}
                        <div class="nav-item dropdown ml-2">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ app.user.prenom ?? app.user.email }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{ path('app_profile') }}">Profil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        </div>
                    {% else %}
                       
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>
{% endblock %}

{% block body %}
    <!-- Contenu principal sera inséré ici par les templates enfants -->
{% endblock %}

{% block footer %}
    <div class="container text-center">
        <footer class="mt-5">
            <hr>
            <p><small><i>
                Consultez nos <a class="link-secondary" href="{{ path('cgu') }}">Conditions Générales d'Utilisation</a>
            </i></small></p>
            <p class="text-muted">
                <small>
                    &copy; {{ "now"|date("Y") }} MediaTek86 - Tous droits réservés
                </small>
            </p>
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}